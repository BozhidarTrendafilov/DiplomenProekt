@model ApplicationUser

<h2>Edit User</h2>

<form asp-controller="Admin" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group form-check">
        <input asp-for="HasPaidSubscription" class="form-check-input" />
        <label asp-for="HasPaidSubscription" class="form-check-label"></label>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsAdmin" class="form-check-input" />
        <label asp-for="IsAdmin" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-controller="Admin" asp-action="AdminPage" class="btn btn-secondary">Cancel</a>
</form>
