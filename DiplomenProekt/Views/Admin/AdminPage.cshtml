@model IEnumerable<DiplomenProekt.Models.ApplicationUser>

<h2>Потребители</h2>

<table class="table">
    <thead>
        <tr>
            <th>Потребителско име</th>
            <th>Email</th>
            <th>Админ</th>
            <th>Платен абонамент</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.IsAdmin</td>
                <td>@user.HasPaidSubscription</td>
                <td>
                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Редактирай</a>
                    <a asp-controller="Admin" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Изтрий</a>

                </td>
            </tr>
        }
    </tbody>
</table>