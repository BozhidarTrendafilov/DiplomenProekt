@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link href="css/styles.css" rel="stylesheet" />

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <form id="account" method="post">
                                <h2 class="fw-bold mb-2 text-uppercase">Вход</h2>
                                <p class="text-white-50 mb-5">Напишете вашият имейл и парола!</p>
                                
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating">
                                    <input asp-for="Input.Email" class="form-control form-control-lg" id="typeEmailX" autocomplete="username" aria-required="true" placeholder="Имейл" />
                                    <label asp-for="Input.Email" for="typeEmailX" class="form-label">Имейл</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-floating">
                                    <input asp-for="Input.Password" type="password" id="typePasswordX" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" />
                                    <label asp-for="Input.Password" class="form-label" for="typePasswordX">Парола</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <br/>
                                <div>
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div>
                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Влез</button>
                                </div>
                                <div>
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
                                    </p>
                                    <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрирай се</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
